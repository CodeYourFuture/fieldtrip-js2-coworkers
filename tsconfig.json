{
  "compilerOptions": {
    "incremental": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "paths": {
      "*": ["./node_modules/*", "./@types/*"],
      "@course/*": ["./packages/*/src"],
      "@packages/*": ["./packages/*/src"]
    }
  }
}
